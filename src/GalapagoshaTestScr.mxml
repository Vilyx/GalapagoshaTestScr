							mouseEnabled="false" selectable="false" styleName="headerSmall"
							text="Банановые&#xd;рецепты"/>
				<s:Image x="66" y="0" smooth="true" source="@Embed('../assets/recipesBtn.png')"/>
			</s:Group>
			<s:Group id="bananaNinja" x="340" width="400" height="356"
					 click="bananaNinjaBtn_clickHandler(event)" verticalCenter="710">
				<s:TextArea y="255" width="500" height="120" borderVisible="false"
							contentBackgroundAlpha="0.0" editable="false" horizontalCenter="0"
							mouseEnabled="false" selectable="false" styleName="headerSmall"
							text="Банановый&#xd;ниндзя"/>
				<s:Image x="66" y="0" smooth="true" source="@Embed('../assets/ninjaBtn.png')"/>
			</s:Group>
		</s:Group>
	
		<ns1:NinjaScreen includeIn="ninja" left="0" top="0" bottom="0" right="0" />
